name: build and test
on:
  workflow_dispatch:
    inputs:
      environment:
        description: "please mention which environment you want to use"
        required: true
        type: choice
        options:
          - dev
          - uat
          - prod
jobs:
  build_the_env:
    runs-on: ubuntu-latest
    steps:
      - name: print the enivronment that the user entered
        run: |
          echo "the user has requested to work on ${inputs.environment} environment"
